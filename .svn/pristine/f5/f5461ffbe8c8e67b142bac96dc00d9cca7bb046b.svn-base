(function(){
  'use strict';

  electionChartsApp.controller('CandidateCtrl', ['$scope', '$routeParams', 'candidateResource', function ($scope, $routeParams, candidateResource) {
    var candidateId = $routeParams.candidateId;
    $scope.candidate = candidateResource.get(candidateId);
    $scope.results = candidateResource.query(candidateId, 'result');
    $scope.results2009 = candidateResource.query(candidateId, 'result2009');
  }]);
}());
