<div class="container" ng-controller="PartyCtrl">


  <div class="page-header">
      <img src="../static/images/{{ party.symbol }}" class="header_party_image"/>
      <h1 class="header_title">{{party.name}}<small> (Part of {{ party.coalition }})</small></h1>

  </div>
    <ol class="breadcrumb">
        <li><a href="../">Home</a></li>
        <li><a href="../party">Parties</a></li>
        <li class="active">{{party.name}}</li>
    </ol>
        <div class="row placeholders">
            <div class="col-xs-6 col-sm-3 placeholder">
                <div class="circle">{{ results.wins }}</div>
                <h4>Wins</h4>
                <span class="text-muted">Something else</span>
            </div>
            <div class="col-xs-6 col-sm-3 placeholder">
                <div class="circle">{{ results.leads }}</div>
                <h4>Leads</h4>
                <span class="text-muted">Something else</span>
            </div>
            <div class="col-xs-6 col-sm-3 placeholder">
                <div class="circle">{{ results.swing }}</div>
              <h4>Swing</h4>
              <span class="text-muted">Something else</span>
            </div>
            <div class="col-xs-6 col-sm-3 placeholder">
                <div class="circle">{{ results.vote_percentage }} %</div>
              <h4>Vote %</h4>
              <span class="text-muted">Something else</span>
            </div>
          </div>

    </div>
    <h2 class="sub-header">State Wise Results</h2>
    <div class="input-group">
        <span class="input-group-addon">Search</span>
        <input type="text" class="form-control" data-ng-model="state" placeholder="State Name">
    </div>
    <div class="table-responsive">
        <table class="table table-striped ">

            <thead>
            <tr>
                <th>Sr. </th>
                <th>State</th>
                <th>Wins/Leads</th>
                <th>Swing</th>
                <th>Vote %</th>
                <th>Total seats</th>
            </tr>
            </thead>
            <tr data-ng-repeat="res in statewise_results | filter:state | orderBy:'vote_percentage':reverse=true">
                <td></td>
                <td><a ng-href="/state/{{ res.state_id }}">{{ res.state }}</a></td>
                <td>{{ res.wins }}/{{ res.leads }}</td>
                <td>{{ res.swing }}</td>
                <td>{{ res.vote_percentage }}</td>
                <td>{{ res.total }}</td>
            </tr>
        </table>
    </div>
  <table class="table table-hover">
    <tr>
      <th class="col-md-2">Constituency Name</th>
      <th class="col-md-3">Candidate Name</th>
      <th class="col-md-3">Competing Candidate Name</th>
      <th class="col-md-1">Competing Party</th>
      <th class="col-md-1">Status</th>
      <th class="col-md-1">Lead</th>
      <th class="col-md-1">Competing Votes</th>
    </tr>
    
    <tr ng-repeat="result in detailed_results">
      <td><a ng-href="/constituency/{{result.constituency_id}}"> {{result.constituency_name}}</a></td>
      <td><a ng-href="/candidate/{{result.candidate_id}}">{{result.candidate_name}}</a></td>
      <td><a ng-href="/candidate/{{result.competing_candidate_id}}">{{result.competing_candidate_name}}</a></td>
      <td><a ng-href="/party/{{result.competing_party}}">{{result.competing_party}}</a></td>
      <td>{{result.status}}</td>
      <td>{{result.lead}}</td>
      <td>{{result.competing_votes}}</td>
    </tr> 
  </table>
</div>

<script src="/static/js/docs.min.js"></script>

