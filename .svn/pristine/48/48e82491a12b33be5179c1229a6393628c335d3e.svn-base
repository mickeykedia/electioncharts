<div xmlns="http://www.w3.org/1999/html">
  <h3>Election Charts</h3>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#">Home</a></li>
        <li class="dropdown">
            <a dropdown-toggle data-toggle="dropdown" >
                Parties <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
                <li><a ng-href="/party/1"> BJP</a></li>
                <li><a ng-href="/party/2"> Congress </a></li>
                <li><a ng-href="/party/371"> AAP </a></li>
                <li><a ng-href="/party/248"> AIADMK </a></li>
                <li><a ng-href="/party/3"> BSP </a></li>
                <li><a ng-href="/party/247"> DMK </a></li>
                <li><a ng-href="/party/34"> JD(U) </a></li>
                <li><a ng-href="/party/49"> NCP </a></li>
                <li><a ng-href="/party/16"> SP </a></li>
                <li><a ng-href="/party"> All Parties </a></li>
            </ul>
        </li>
        <li class="dropdown">
            <a dropdown-toggle data-toggle="dropdown" >
              Coalitions <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><a ng-href="/coalition/2"> BJP +</a></li>
              <li><a ng-href="/coalition/1"> Congress +</a></li>
            </ul>
        </li>
        <li><a ng-href="/state">States</a></li>
        <li><a ng-href="/constituency">Constituencies</a></li>
        <li><a ng-href="/candidate">Candidates</a></li>
    </ul>


    <div class="row">

      <div class="col-sm-3 col-xs-6">
        <div class="thumbnail">
          <img src="/static/images/bjp_main_page.jpg" alt="" class="main_page_party_image">
          <div class="caption">
            <h3>BJP+ {{ bjp.wins + bjp.leads }}</h3>
            <p>
                Wins : {{ bjp.wins }}<br/>
                Leads : {{ bjp.leads }}<br/>
                Swing : {{ bjp.swing }}<br/>
                Vote percentage : {{ bjp.vote_percentage }}% <br/>
            </p>
          </div>
        </div>
      </div>

      <div class="col-sm-3 col-xs-6">
          <div class="thumbnail">
              <img src="/static/images/congress.jpg" alt="" class="main_page_party_image">
              <div class="caption">
                  <h3>Congress+ {{ congress.wins + congress.leads }}</h3>
                  <p>
                      Wins : {{ congress.wins }}<br/>
                      Leads : {{ congress.leads }}<br/>
                      Swing : {{ congress.swing }}<br/>
                      Vote percentage : {{ congress.vote_percentage }} % <br/>
                  </p>
              </div>
          </div>
      </div>

        <div class="col-sm-3 col-xs-6">
            <div class="thumbnail">
                <img src="/static/images/party_all_main.jpg" alt="" class="main_page_party_image">
                <div class="caption">
                    <h3>Others {{ others.wins + others.leads }}</h3>
                    <p>
                        Wins : {{ others.wins }}<br/>
                        Leads : {{ others.leads }}<br/>
                        Swing : {{ others.swing }}<br/>
                        Vote percentage : {{ others.vote_percentage }} % <br/>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-3 col-xs-6">
            <div class="thumbnail">
                <img src="/static/images/aap_main.jpg" alt="" class="main_page_party_image">
                <div class="caption">
                    <h3>AAP {{ aap.wins + aap.leads }}</h3>
                    <p>
                        Wins : {{ aap.wins }}<br/>
                        Leads : {{ aap.leads }}<br/>
                        Swing : {{ aap.swing }}<br/>
                        Vote percentage : {{ aap.vote_percentage }} % <br/>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
