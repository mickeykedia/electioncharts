<accordion close-others="oneAtATime">
    <accordion-group is-open="isopen" >
        <accordion-heading ng-click="isopen=!isopen">
           <div>
            Result in 2009 (Expand)
           <i class="pull-right glyphicon" 
              ng-class="{'glyphicon-   chevron-down': isopen, 'glyphicon-chevron-right': !isopen}">
           </i>
           </div>
       </accordion-heading>
       		<table class="table table-hover">
		    <tr>
		      <th class="col-md-2">Constituency Name</th>
		      <th class="col-md-1">Candidate Vote Share</th>
		      <th class="col-md-3">Winning Candidate Name</th>
		      <th class="col-md-1">Winning Candidate Party</th>
		      <th class="col-md-1">Winner's vote share</th>
		    </tr>
		
		    <tr ng-repeat="result2 in results2009">
		      <td><a ng-href="/constituency/{{result2.constituency_id}}"> {{result2.constituency_name}}</a></td>
		      <td>{{result2.candidate_votes*100/(result2.candidate_votes+result2.other_votes)|number:1}}%
		      </td>
		      <td><a ng-href="/candidate/{{result2.leader_id}}">{{result2.winner_name|titlecase}}</a></td>
		      <td><a ng-href="/party/{{result2.winner_party_id}}">{{result2.winner_party_name|titlecase}}</a></td>
		      <td>{{result2.winner_count*100/(result2.candidate_votes+result2.other_votes)|number:1}}%</td>
		    </tr> 
		  </table>
   </accordion-group>
</accordion>

  </div>
  

        

