<div class="container" ng-controller="ConstituencyCtrl">
  <div class="well">
    <div class="row">
      <div class="col-md-6">Constituency Name: {{constituency.name}}</div>
      <div class="col-md-6">Counting Status: {{constituency.voting_status|titlecase}}</div>
    </div>
  </div>
   <ol class="breadcrumb">
        <li><a href="../">Home</a></li>
        <li><a href="../candidate">Constituency</a></li>
        <li class="active">{{constituency.name|titlecase	}}</li>
    </ol>
     <div class="row">
    
    <div class="col-md-6">
      <div google-chart chart="chartVotes" style="{{chartVotes.cssStyle}}" on-ready="chartReady()"></div>
    </div>
  </div>
  <table class="table table-hover">
    <tr>
      <th class="col-md-3">Candidate Name</th>
      <th class="col-md-3">Party</th>
      <th class="col-md-1">Votes</th>
      <th class="col-md-1">Vote share</th>
    </tr>
    
    <tr ng-repeat="result in constituency.result_list">
      <td><a ng-href="/candidate/{{result.candidate_id}}">{{result.candidate_name|titlecase}}</a></td>
      <td><a ng-href="/party/{{result.party_id}}">{{result.party_name|titlecase}}</a></td>
      <td>{{result.votes|number}}</td>
      <td>{{result.votes*100/constituency.total_votes|number:1}}%</td>
    </tr> 
  </table>
</div>
