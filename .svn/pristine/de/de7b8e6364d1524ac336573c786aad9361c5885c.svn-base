{% extends "base.html" %}

{% block content %}
<script src="http://d3js.org/d3.v3.min.js"></script>
<script src="http://dimplejs.org/dist/dimple.v1.1.5.min.js"></script>
<h1>Overall Positions</h1>
 <script type="text/javascript">
    var svg = dimple.newSvg("body", 800, 600);
    data={{ results|safe }}
    var chart = new dimple.chart(svg, data);
    chart.addCategoryAxis("y", "coalition");
    chart.addMeasureAxis("x", "seats");
    chart.addSeries("result", dimple.plot.bar);
    chart.addLegend(60, 10, 510, 20, "right");
    
    chart.draw();
  </script>
<style>

body {
  font: 10px sans-serif;
}

.arc path {
  stroke: #fff;
}

</style>

<script src="http://d3js.org/d3.v3.min.js"></script>
<h1>Vote Share</h1>
<script>

var data = {{shares|safe}}

var width = 960,
    height = 500,
    radius = Math.min(width, height) / 2;

var color = d3.scale.ordinal()
    .range(["#98abc5", "#8a89a6", "#7b6888", "#6b486b", "#a05d56", "#d0743c", "#ff8c00"]);

var arc = d3.svg.arc()
    .outerRadius(radius - 10)
    .innerRadius(0);

var pie = d3.layout.pie()
    .sort(null)
    .value(function(d) { return d.share; });

var svg = d3.select("body").append("svg")
    .attr("width", width)
    .attr("height", height)
  .append("g")
    .attr("transform", "translate(" + width / 2 + "," + height / 2 + ")");



  var g = svg.selectAll(".arc")
      .data(pie(data))
    .enter().append("g")
      .attr("class", "arc");

  g.append("path")
      .attr("d", arc)
      .style("fill", function(d) { return color(d.data.coalition); });

  g.append("text")
      .attr("transform", function(d) { return "translate(" + arc.centroid(d) + ")"; })
      .attr("dy", ".35em")
      .style("text-anchor", "middle")
      .text(function(d) { return d.data.coalition; });

</script>
 
{% endblock %}