def get_party_trails_sql_string_for_state(party_id, state_id,state):
	str = """select
        rs.constituency_id,
        cs.name as constituency,
        rs.candidate_id,
        c.fullname as candidate_name,
        (votes-max_votes) as trail,
        votes,
        p.name as winning_party,
        MY.candidate_id,
        wc.fullname,
        MY.max_votes as max_votes
        from
            results rs
        inner join candidate c
            on
            c.id = rs.candidate_id
        inner join constituency cs
            on
            cs.id = rs.constituency_id
        inner join
            (SELECT
                rs1.constituency_id,
                rs1.candidate_id,
                rs1.party_id as winning_party_id,
                rs1.votes as max_votes
            FROM
                resultdayanalysis.results rs1
            left join results rs2
                on
                    rs1.constituency_id = rs2.constituency_id
                    and
                    rs1.votes < rs2.votes
            where
                rs2.constituency_id is null ) as MY
            on
            MY.constituency_id = rs.constituency_id
        inner join party p
            on
            p.id = MY.winning_party_id
        inner join candidate wc
            on
            wc.id = MY.candidate_id
        where
            rs.active = true
            and
            rs.party_id = %s
            and
            rs.status = '%s'
            and
            cs.state_id = %s
            and
            rs.candidate_id not in (select candidate_id from latest_results)
        order by
            trail desc;""" % (party_id, state,state_id)
	return str;


