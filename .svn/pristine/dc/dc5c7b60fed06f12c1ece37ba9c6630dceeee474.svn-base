<div class="container" ng-controller="ConstituencyListCtrl">
  <h3>Constituency List</h3>
  <table class='table table-hover'>
    <tr>
      <th class="col-md-2">Name</th>
      <th class="col-md-1">Constituency Code</th>
      <th class="col-md-1">State</th>
      <th class="col-md-1"></th>
    </tr>
    
    <tr ng-repeat="constituency in constituencyList">
      <td>{{constituency.name}}</td>
      <td>{{constituency.constituency_code}}</td>
      <td><a ng-href="/state/{{constituency.state_id}}">{{constituency.state_name}}</a></td>
      <td><a ng-href="/constituency/{{constituency.id}}" class="btn btn-sm btn-primary">Preview</a></td>
    </tr>
  </table>
</div>
